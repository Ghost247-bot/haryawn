generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model ChatSession {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  messages  Message[]
}

model Message {
  id            String      @id @default(uuid())
  content       String
  isBot         Boolean     @default(false)
  chatSession   ChatSession @relation(fields: [chatSessionId], references: [id])
  chatSessionId String
  createdAt     DateTime    @default(now())
  status        String      @default("sent")
  reactions     String?     // Store reactions as JSON string
  attachments   String?     // Store attachments as JSON string
}

model ContactMessage {
  id        String   @id @default(uuid())
  name      String
  email     String
  phone     String?
  subject   String
  message   String
  status    String   @default("pending") // pending, processed, responded
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Appointment {
  id            String   @id @default(uuid())
  name          String
  email         String
  phone         String?
  date          DateTime
  time          String
  practiceArea  String   // Changed from service to practiceArea
  message       String?  // Changed from notes to message
  status        String   @default("pending") // pending, confirmed, cancelled
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
